{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs", 
    "outDir": "dist/",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "server.ts"],
  "exclude": ["node_modules"]
}
